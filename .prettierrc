{
  "useTabs": false,
  "tabWidth": 2,
  "singleQuote": false,
  "bracketSameLine": false,
  "trailingComma": "all",
  "printWidth": 80,
  "objectWrap": "preserve",
  "arrowParens": "always",
  "singleAttributePerLine": true,
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-css-order"],
  "svelteAllowShorthand": false,
  "svelteIndentScriptAndStyle": true,
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    }
  ]
}
